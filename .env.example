# ============================================
# KHAYALI - Print on Demand Platform
# Environment Variables Template
# ============================================
# 
# Instructions:
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual credentials
# 3. Never commit .env to version control
#
# ============================================

# --------------------------------------------
# Google Gemini AI API (REQUIRED)
# --------------------------------------------
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# --------------------------------------------
# Application Configuration
# --------------------------------------------
VITE_APP_NAME=KHAYALI
VITE_APP_URL=http://localhost:3000
VITE_ENV=development

# --------------------------------------------
# Server Configuration
# --------------------------------------------
VITE_PORT=3000

# --------------------------------------------
# Feature Flags
# --------------------------------------------
VITE_ENABLE_AI_GENERATION=true
VITE_ENABLE_ADMIN_PANEL=true
VITE_ENABLE_REGISTRATION=true

# --------------------------------------------
# API Endpoints (Optional - for future use)
# --------------------------------------------
# VITE_API_URL=https://api.khayali.com
# VITE_STRIPE_PUBLIC_KEY=pk_test_xxxxx
# VITE_PAYPAL_CLIENT_ID=xxxxx

# --------------------------------------------
# Analytics & Monitoring (Optional)
# --------------------------------------------
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX
# VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# --------------------------------------------
# Social Media Links
# --------------------------------------------
VITE_INSTAGRAM_URL=https://instagram.com/khayali
VITE_TWITTER_URL=https://twitter.com/khayali
VITE_FACEBOOK_URL=https://facebook.com/khayali

# --------------------------------------------
# Contact Information
# --------------------------------------------
VITE_SUPPORT_EMAIL=support@khayali.com

# --------------------------------------------
# Development Tools
# --------------------------------------------
VITE_DEBUG=false
VITE_VERBOSE_LOGGING=false

